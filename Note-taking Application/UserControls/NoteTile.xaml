<UserControl x:Class="Note_taking_Application.UserControls.NoteTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Note_taking_Application.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="5" BorderThickness="1" Background="#333333" Margin="5">
            <Grid>
                <TextBlock Text="{Binding Content}" Padding="10" Margin="4" MinHeight="60" MaxHeight="300" Foreground="White"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
