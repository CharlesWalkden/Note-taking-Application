<UserControl x:Class="Note_taking_Application.UserControls.NotesPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Note_taking_Application.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" MinHeight="100" MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Row="1" x:Name="notes" Text="{Binding NoteModel.Content, UpdateSourceTrigger=PropertyChanged}" Background="#333333" Foreground="White" 
                 Padding="5" AcceptsReturn="True" TextWrapping="Wrap" AcceptsTab="True" BorderThickness="0" />
    </Grid>
</UserControl>
